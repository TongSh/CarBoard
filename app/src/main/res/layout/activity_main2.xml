<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wm.remusic.activity.Main2Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/bg">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp">
                <LinearLayout
                    android:id="@+id/music"
                    android:onClick="onClickListener"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/home_bg_music">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/mmusic"/>
                    <!--<TextView-->
                        <!--android:layout_width="fill_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:adjustViewBounds="true"-->
                        <!--android:scaleType="fitXY"-->
                        <!--android:layout_marginTop="20dp"-->
                        <!--android:textSize="30dp"-->
                        <!--android:text="音乐"-->
                        <!--android:textStyle="bold"-->
                        <!--android:gravity="center"/>-->
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vedio"
                    android:onClick="onClickListener"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/home_bg_vedio"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/camera2"/>
                    <!--<TextView-->
                        <!--android:layout_width="fill_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:adjustViewBounds="true"-->
                        <!--android:scaleType="fitXY"-->
                        <!--android:layout_marginTop="20dp"-->
                        <!--android:textSize="30dp"-->
                        <!--android:text="行车"-->
                        <!--android:textStyle="bold"-->
                        <!--android:gravity="center"/>-->
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:id="@+id/phone"
                    android:onClick="onClickListener"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/home_bg_phone"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/phone"/>
                    <!--<TextView-->
                        <!--android:layout_width="fill_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:adjustViewBounds="true"-->
                        <!--android:scaleType="fitXY"-->
                        <!--android:layout_marginTop="20dp"-->
                        <!--android:textSize="30dp"-->
                        <!--android:text="电话"-->
                        <!--android:textStyle="bold"-->
                        <!--android:gravity="center"/>-->
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/message"
                    android:onClick="onClickListener"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/home_bg_message">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/map"/>
                    <!--<TextView-->
                        <!--android:layout_width="fill_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:adjustViewBounds="true"-->
                        <!--android:scaleType="fitXY"-->
                        <!--android:layout_marginTop="20dp"-->
                        <!--android:textSize="30dp"-->
                        <!--android:text="导航"-->
                        <!--android:textStyle="bold"-->
                        <!--android:gravity="center"/>-->
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:layout_marginTop="50dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天津"
                    android:textSize="50dp"
                    android:textColor="#fff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="晴"
                    android:textSize="50dp"
                    android:textColor="#fff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22-30℃"
                    android:textSize="50dp"
                    android:textColor="#fff"/>
            </LinearLayout>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:src="@drawable/sun"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/day_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6月12日"
                android:textSize="50dp"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/clock_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17:22"
                android:textSize="50dp"
                android:textColor="#fff"/>
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
